FROM node:22-alpine

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .

ARG FRONTEND_URL
ENV FRONTEND_URL=$FRONTEND_URL

ARG AUTH0_AUDIENCE
ENV AUTH0_AUDIENCE=$AUTH0_AUDIENCE

ARG AUTH0_ISSUER_BASE_URL
ENV AUTH0_ISSUER_BASE_URL=$AUTH0_ISSUER_BASE_URL

ENV NODE_ENV=production

EXPOSE 5000

CMD ["node", "server.js"]